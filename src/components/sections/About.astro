---
import Section from "../ui/Section.astro";
import Title from "../ui/Title.astro";
import Chip from "../ui/Chip.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const stacks = [
  {
    type: "about.list.frontend",
    skills: [
      "HTML",
      "CSS3",
      "JavaScript",
      "React",
      "Redux",
      "TailwindCSS",
      "Typescript",
      "GraphQL",
      "Next.js",
    ],
  },
  {
    type: "about.list.backend",
    skills: [
      "Node.js",
      "Express",
      "Laravel",
      "NestJS",
      "CodeIgniter",
      "MongoDB",
      "PostgreSQL",
      "MySQL",
      "SQL Server",
    ],
  },
  {
    type: "about.list.languagues",
    skills: ["PHP", "C++", "C#", "Python", "Java", "SQL"],
  },
  {
    type: "about.list.testing",
    skills: ["Jest", "Cypress", "Playwright"],
  },
];


const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Section id="about">
  <Title title={t('title.about')} />
  <div id="content" class="max-w-3xl flex flex-col gap-8">
    <p>{t('about.content.1')}</p>
    <p>{t('about.content.2')}</p>
    <p>{t('about.content.3')}</p>
    <div class={`flex flex-col gap-10 `}>
      {
        stacks.map((stack) => (
          <div class="flex flex-col gap-4">
            <p class="w-44 font-bold">{t(stack.type)}</p>
            <div class="w-full flex flex-wrap gap-4">
              {stack.skills.map((skill) => (
                <Chip skill={skill} />
              ))}
            </div>
          </div>
        ))
      }
    </div>
    <p>
      {t('about.content.4.1')}<span
        class="cursor-llama group transition-all duration-200 underline hover:no-underline font-bold"
        ><span class="transition-all duration-200 group-hover:text-red-500"
          >P</span
        >er<span class="transition-all duration-200 group-hover:text-red-500"
          >u</span
        ></span
      >{t('about.content.4.2')}
    </p>
  </div>
</Section>