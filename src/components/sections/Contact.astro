---
import { MY_EMAIL } from "../../constants";
import CircularButton from "../CircularButton.astro";
import LinkTo from "../LinkTo.astro";
import Section from "../Section.astro";
---

<Section
  id="contact"
  extra="flex h-full w-full items-center justify-center flex-1 min-h-[400px]"
>
  <div class="w-full flex flex-col md:flex-row md:justify-between items-center">
    <div class="w-full flex flex-col text-xl md:text-2xl relative mb-10 md:mb-0">
      <h1 class="text-6xl mb-4 md:mb-8 font-bold">
        Let's <span class="text-primary">Create</span> Together
      </h1>
      <div class="leading-normal flex flex-col items-start gap-0 md:gap-2">
        <LinkTo link={`mailto:${MY_EMAIL}`}>
          {MY_EMAIL}
        </LinkTo>
        <LinkTo link="https://wa.me/51984632346">+51984632346</LinkTo>
      </div>
    </div>
    <CircularButton />
  </div>
</Section>
