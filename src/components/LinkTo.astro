---
interface Props {
  link: string;
  extraClasses?: string;
  newPage?: boolean;
}

const { link, extraClasses, newPage = true } = Astro.props;
---

<a
  href={link}
  rel="noreferrer"
  target={newPage ? "_blank" : "_self"}
  class={`flex items-center gap-2 hover:text-green-theme text-gray-200 w-fit group ${extraClasses}`}
>
  <slot />
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class="w-4 h-4 md:w-6 md:h-6 md:group-hover:w-10 transition-all duration-300"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
  </svg>
</a>
